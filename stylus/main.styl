// Disable IE Vendor Patches
support-for-ie = false
// Only use Webkit vendor prefixes
vendor-prefixes = webkit official
vendors = webkit official

@import 'nib'
@import 'animation'

global-reset()

body
	font-family SourceSansPro,"Segoe UI","Lucida Grande",Verdana,Arial,sans-serif
	font-size 14

@import "hx-btn"
@import "hx-menu"


hx-icon
	display: inline-block;
	vertical-align: middle;
	background-repeat: no-repeat;
	fill: currentcolor;
	position: relative;
	height: 16px;
	width: 16px;